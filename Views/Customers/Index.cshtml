@model IList<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in @Model){
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
            </tr>
        }   
    </tbody>
</table>